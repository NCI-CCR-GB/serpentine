"""
Rules for analysing fasta files with FastQC.

For usage, include this in your workflow.
"""

__author__ = "Johannes KÃ¶ster (http://johanneskoester.bitbucket.org)"
__license__ = "MIT"


rule fastqc:
    input:
        "{prefix}.fastq.gz"
    output:
        "{prefix}_fastqc.zip"
    params: 
        batch = '-l nodes=1:gpfs -q ccr'
    threads: 8
    shell:
        "module load fastqc && fastqc {input}"
